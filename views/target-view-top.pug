doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")

        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= "Fotaza"
        link(rel="shortcut icon" type="image/x-icon" href="logo3.png" sizes="573x573")

        link(rel="stylesheet" href="/home.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css")

        script(type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js")
        script(nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js")

        script(content-type="JavaScript" src="/target.js" defer) 
    body 


        a#menu(onclick="abrirMenu()")
            ion-icon#apps(name="list")

        #contain-menu
            #cuadro-menu
                a#cerrar(onclick="cerrar()")
                    ion-icon#close(name="close")
            #cuadro-menu
                button#contact-btn Contactarse
            #cuadro-menu
                button#contact-btn Enviar mensaje
            #cuadro-menu
                button#contact-btn Comprar
            #cuadro-menu
                button#contact-btn Detalles
            #cuadro-menu
                a(href="/photo")
                    button#contact-btn Salir

        #top-target-box.row
            #top-target-img.col-lg-12.col-md-12.col-sm-12.col-xs-12
                if photos[0].privacy == "private"
                    img(src=`/${photos[0].imageWatermark}` title=`${photos[0].category}`)
                else if photos[0].privacy == "public" && !req.session.isLoggedIn
                    img(src=`/${photos[0].imageWatermarkFotaza}` title=`${photos[0].category}`)
                else if photos[0].privacy != "private" && req.session.isLoggedIn
                    img(src=`/${photos[0].image}` title=`${photos[0].category}`)



